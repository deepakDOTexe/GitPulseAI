# OpenAI API Configuration (Legacy - now using Gemini)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Configuration (Current)
GEMINI_API_KEY=your_gemini_api_key_here

# Application Configuration
APP_NAME=GitPulseAI
APP_VERSION=1.0.0
DEBUG=False

# LLM Configuration
GEMINI_MODEL=gemini-1.5-flash
TEMPERATURE=0.1
MAX_TOKENS=1000

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Vector Search Configuration
SIMILARITY_THRESHOLD=0.3
MAX_SEARCH_RESULTS=5

# Data Configuration
DATA_DIR=data
# Use sample data (default)
# SAMPLE_DATA_FILE=data/sample_gitlab_data.json
# Switch to comprehensive GitLab data
# SAMPLE_DATA_FILE=data/real_gitlab_data.json
# Use focused 2-page GitLab data (recommended)
SAMPLE_DATA_FILE=data/gitlab_two_pages.json

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
